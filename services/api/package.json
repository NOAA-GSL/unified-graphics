{
  "name": "ui",
  "version": "0.0.1",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "postcss --use postcss-import --use cssnano --dir build/css/ --no-map src/unified_graphics/static/css/style.css",
    "build:js": "rollup src/unified_graphics/static/js/*.js --format es --dir build/js/",
    "build:assets": "mkdir -p build && cp -r src/unified_graphics/static/geo build/geo",
    "clean": "del build/",
    "test": "echo 'No tests' && exit 1",
    "lint": "prettier --check --plugin-search-dir=. . && eslint . --ignore-pattern '**/*.min.js' --ignore-pattern '**/htmlcov/**' --ignore-pattern '**/vendor/*' && stylelint src/**/*.css",
    "format": "prettier --write --plugin-search-dir=. . && stylelint --fix src/**/*.css",
    "vendor": "echo 'export * from \"d3\"' | rollup --plugin @rollup/plugin-node-resolve --file src/unified_graphics/static/js/vendor/d3.js --format es"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "cssnano": "^5.1.15",
    "d3": "^7.8.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.4",
    "rollup": "^3.18.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-order": "^6.0.2",
    "stylelint-prettier": "^3.0.0"
  },
  "type": "module"
}
